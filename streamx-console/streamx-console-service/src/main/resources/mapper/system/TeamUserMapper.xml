<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.streamxhub.streamx.console.system.dao.TeamUserMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.streamxhub.streamx.console.system.entity.TeamUser">
        <id column="team_id" property="teamId"/>
        <result column="user_id" property="userId"/>
    </resultMap>


    <!--根据用户Id删除该用户的角色关系-->
    <delete id="deleteByUserId">
        DELETE
        FROM t_team_user
        WHERE user_id = #{userId}
    </delete>
    <select id="findTeamUserByUser" resultType="com.streamxhub.streamx.console.system.entity.TeamUser">

        select a.*,
               b.team_name as teamName
        from t_team_user a
                 left join t_team b on a.team_id = b.team_id
        where a.user_id=#{userId}
    </select>
</mapper>
